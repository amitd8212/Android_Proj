<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="@drawable/download">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/guessValueEntry"
        android:layout_below="@+id/guessTextField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="#000000"
        android:textColor="#8fd655" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guessTextField"
        android:text="Guess a number between 0 to 20"
        android:textColor="#9cfd60"
        android:background="#010101"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:id="@+id/guessButton"
        android:layout_below="@+id/guessValueEntry"
        android:layout_marginTop="89dp"
        android:layout_alignRight="@+id/guessValueEntry"
        android:layout_alignEnd="@+id/guessValueEntry"
        android:layout_alignLeft="@+id/guessValueEntry"
        android:layout_alignStart="@+id/guessValueEntry"
        android:textAlignment="center"
        android:textColor="#fffdd2"
        android:background="#899783"
        android:onClick="guessNumber" />
</RelativeLayout>
